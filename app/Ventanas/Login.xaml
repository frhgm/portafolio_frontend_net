<Window
    x:Class="app.Ventanas.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TextBox
            Name="TxtRut"
            Width="120"
            Margin="343,126,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <PasswordBox
            Name="TxtPass"
            Width="120"
            Margin="343,192,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Button
            Name="Btn_Login"
            Margin="0,269,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="BtnLogin_OnClickAsync"
            Content="Iniciar sesion" />
        <Label
            Width="100"
            Height="40"
            Margin="350,109,350,285"
            Content="Ingrese su RUT" />
        <Label
            Width="150"
            Height="30"
            Margin="350,109,310,140"
            Content="Ingrese su contraseña" />

    </Grid>
</Window>
