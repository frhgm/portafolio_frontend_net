<Window
    x:Class="app.Ventanas.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login"
    Width="500"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Grid.Column="1" Content="Ingrese su RUT" />
        <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom"
            Name="TxtRut"
            TextWrapping="Wrap" />
        <Label Grid.Row="2" Grid.Column="1"  Content="Ingrese su contraseña" />
        <PasswordBox Grid.Row="2" Grid.Column="1"
            x:Name="TxtPass" VerticalAlignment="Bottom" />
        <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
                Name="Btn_Login"
                Click="BtnLogin_OnClickAsync"
                Content="Iniciar sesion" />


    </Grid>
</Window>